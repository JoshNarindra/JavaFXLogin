<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="194.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxlogin.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ButtonBar prefHeight="40.0" prefWidth="70.0">
     <buttons>
       <Button fx:id="exit" mnemonicParsing="false" onAction="#onExitButtonClick" text="Exit" />
     </buttons>
   </ButtonBar>


    <Label fx:id="login" text="Login" />
   <TextField fx:id="username" onKeyTyped="#activateLoginButton" promptText="Username" />
   <PasswordField fx:id="password" onKeyTyped="#activateLoginButton" promptText="Password" />
   <Button fx:id="reset" mnemonicParsing="false" onAction="#onResetButtonClick" text="Reset" />
    <Button fx:id="sign_in" disable="true" onAction="#onSignInButtonClick" text="Sign in" />
    <Label fx:id="Text" />
</VBox>
